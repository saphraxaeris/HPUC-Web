<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>

	<title>@ViewBag.Title</title>
		
	<link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<link type="text/css" rel="stylesheet" href="Assets/materialize/css/materialize.css"  media="screen,projection"/>
	<link type="text/css" rel="stylesheet" href="Styles/styles.css"/>
		
	@RenderSection("Styles", false)
</head>
<body class="grey lighten-4">
	<header>
		<nav class="top-nav teal z-depth-3" style="position:fixed;z-index:3;">
		<a href='@Url.Action("Index","Home")' class="brand-logo">Logo</a>
			<div class="nav-wrapper hide-on-large-only">
                <a href="#" data-activates="nav-mobile" class="button-collapse top-nav"><i class="material-icons">menu</i></a>
            </div>
			<div class="nav-wrapper hide-on-med-and-down">
					<a href="#" data-activates='profile-dropdown' class="top-nav"><img class="profile-pic right circle" src="http://cdn.bulbagarden.net/upload/thumb/0/0d/025Pikachu.png/250px-025Pikachu.png"/></a>
			<ul id='profile-dropdown' class='dropdown-content'>
    			<li><a href="#!">one</a></li>
    			<li><a href="#!">two</a></li>
    			<li class="divider"></li>
    			<li><a href="#!">three</a></li>
    			<li><a href="#!"><i class="material-icons">view_module</i>four</a></li>
    			<li><a href="#!"><i class="material-icons">cloud</i>five</a></li>
  			</ul>
				<form style="margin-right: 10%; margin-left: 10%;">
        			<div class="input-field">
          				<input id="search" type="search" placeholder="Search..." required >
          				<label class="label-icon" for="search"><i class="material-icons">search</i></label>
          				<i class="material-icons">close</i>
        			</div>
      			</form>
			</div>

			<ul id="nav-mobile" class="side-nav">
				<li><a href='@Url.Action("Index","Home")' class="home btn"><i class="material-icons">view_module</i>Home</a></li>
        		<li><a href='@Url.Action("Index","Volunteers")' class="volunteers btn"><i class="material-icons">view_module</i>Volunteers</a></li>
        		<li><a href='@Url.Action("Index","Communities")' class="communities btn"><i class="material-icons">view_module</i>Communities</a></li>
				<li><a href='@Url.Action("Index","Profile")' class="profile btn"><i class="material-icons">view_module</i>Profile</a></li>
				<li><a href='@Url.Action("Index","Events")' class="events btn"><i class="material-icons">view_module</i>Events</a></li>
			</ul>
        </nav>
	</header>
	<div class="row">
		<div class="col l2 hide-on-med-and-down">
			<ul class="side-nav" style="transform: translate(0,65px)!important;">
				<li><a href='@Url.Action("Index","Home")' class="home btn"><i class="material-icons">view_module</i>Home</a></li>
        		<li><a href='@Url.Action("Index","Volunteers")' class="volunteers btn"><i class="material-icons">view_module</i>Volunteers</a></li>
        		<li><a href='@Url.Action("Index","Communities")' class="communities btn"><i class="material-icons">view_module</i>Communities</a></li>
				<li><a href='@Url.Action("Index","Profile")' class="profile btn"><i class="material-icons">view_module</i>Profile</a></li>
				<li><a href='@Url.Action("Index","Events")' class="events btn"><i class="material-icons">view_module</i>Events</a></li>
			</ul>
		</div>
		<div class="col l10 m12 s12" style="margin-top: 70px;">
			<div class="container">
				@RenderBody()
			</div>
		</div>
	</div>

	<script type="text/javascript" src="Scripts/jquery-3.2.0.min.js"></script>	
	<script type="text/javascript" src="Scripts/navigation.js"></script>	
	<script type="text/javascript" src="Assets/materialize/js/materialize.min.js"></script>
	<script>
		$(function() {
    		$(".button-collapse").sideNav();
		});
	</script>
	@RenderSection("Scripts", false)
</body>
</html>
