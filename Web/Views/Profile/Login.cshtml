<div class="row">

	<div class="row">
		<div class="col s12">
			<h4>Login</h4>
		</div>
	</div>
	
	<div class="card col offset-l2 offset-m1 l8 m10 s12">
		<form>
			<div class="row">
        		<div class="input-field col s12">
          			<input id="email" type="email" class="validate">
          			<label for="email">Email</label>
        		</div>
      		</div>
			<div class="row">
        		<div class="input-field col s12">
          			<input id="password" type="password" class="validate">
          			<label for="password">Password</label>
        		</div>
      		</div>
			<div class="row">
        		<div class="input-field col s12">
					<button id="loginSubmit" class="btn right">Submit</button>
        		</div>
      		</div>
			
		</form>
	</div>
	
</div>

@section scripts {
<script>
		$(function() {
    		$('.chips').material_chip();
			Navigation.InitLogin();
		});
	</script>
}