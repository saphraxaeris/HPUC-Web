<div class="row">

	<div class="row">
		<div class="col s12">
			<h4>Sign Up</h4>
		</div>
	</div>
	
	<div class="card col offset-l2 offset-m1 l8 m10 s12">
		<form>
			<div class="row">
				<div class="input-field col s12">
          			<input id="full_name" type="text" class="validate">
          			<label for="full_name">Full Name</label>
        		</div>
			</div>

			<div class="row">
        		<div class="input-field col s12">
          			<input id="email" type="email" class="validate">
          			<label for="email">Email</label>
        		</div>
      		</div>

			<div class="row">
        		<div class="input-field col s12">
          			<input id="occupation" type="text" class="validate">
          			<label for="occupation">Occupation</label>
        		</div>
      		</div>

			<div class="row">
        		<div class="input-field col s12">
          			<div id="abilities" class="chips"></div>
          			<label for="abilities">Abilities</label>
        		</div>
      		</div>

      		<div class="row">
        		<div class="input-field col s12">
          			<textarea id="description" class="materialize-textarea"></textarea>
          			<label for="description">Description</label>
        		</div>
      		</div>

			<div class="row">
        		<div class="input-field col s12">
          			<input id="location" type="text" class="validate">
          			<label for="location">Location</label>
        		</div>
      		</div>
			
			<div class="row">
        		<div class="input-field col s12">
          			<input id="password" type="password" class="validate">
          			<label for="password">Password</label>
        		</div>
      		</div>

			<div class="row">
        		<div class="input-field col s12">
					<button id="registerSubmit" class="btn right">Submit</button>
        		</div>
      		</div>
			
		</form>
	</div>
	
</div>

@section scripts {
<script>
		$(function() {
    		$('.chips').material_chip();
			Navigation.InitRegister();
		});
	</script>
}